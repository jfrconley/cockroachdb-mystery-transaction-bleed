{
        "compileOnSave": true,
        "compilerOptions": {
                "strictNullChecks": true,
                "skipLibCheck": true,
                "removeComments": true,
                "incremental": true,
                "esModuleInterop": false,
                "experimentalDecorators": true,
                "module": "commonjs",
                "target": "ES2020",
                "noImplicitAny": true,
                "moduleResolution": "node",
                "declaration": true,
                "sourceMap": true,
                "outDir": "dist",
                "resolveJsonModule": true,
                "baseUrl": ".",
                "typeRoots": ["node_modules/@types"],
                "paths": {
                        "*": [
                                "node_modules/*",
                                "src/types/*"
                        ]
                },
                "types": [
                        "node",
                        "jest"
                ],
                "alwaysStrict": true
        },
        "include": [
                "src/**/*",
        ]
}

